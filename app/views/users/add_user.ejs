<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><b>Add User</b></div>
  <div class="panel-body">
    <form method="POST" action="/add_user_process">
      <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" required>
      </div>
      <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" name="username" maxlength="10" required>
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" maxlength="10" required>
      </div>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>